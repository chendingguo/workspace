<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN" "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="cn.no7player.mapper.UserMapper">

	<select id="findUserInfo" resultType="cn.no7player.model.User">
		select name, age,password
		from user;
	</select>

	<select id="getUsers" parameterType="cn.no7player.model.User"
		resultType="cn.no7player.model.User">
		select * from user
		<where>
			<if test="name != null">
				and name= #{name,jdbcType=INTEGER}
			</if>
		</where>
		limit #{offset},#{limit}

	</select>

	<select id="getUserCount" parameterType="cn.no7player.model.User"
		resultType="java.lang.Integer">
		select count(*) from user
		<where>
			<if test="name != null">
				name= #{name,jdbcType=INTEGER}
			</if>
		</where>

	</select>

</mapper>